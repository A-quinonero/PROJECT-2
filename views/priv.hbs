<p class="text-right pr-2"> Buenas <b>{{username}}</b>!</p>
<h1 class="title2 text-center">Have list:</h1>
<div class="container">
{{#each haveList}}
    <div class="card" style="width: 18rem;">
  <img src= {{imgPath}} class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text"><i>{{category}}</i></p>
    <p class="card-text">{{description}}</p>
    <a href="/priv/delete-have/{{_id}}" class="btn btn-primary">Delete</a>
  </div>
</div>
{{/each}}
{{#unless haveList}}
    <p>No tienes nada que subir?</p>
{{/unless}}
</div>
<br>
<form class="d-flex justify-content-center align-items-center text-center" action="/priv/create-have">
<button class="btn btn-primary">Add</button>
</form>
<br>
<form class="d-flex justify-content-center align-items-center text-center" action="/priv/logout" method="post">
<button class="btn btn-primary">log-out</button>
</form>